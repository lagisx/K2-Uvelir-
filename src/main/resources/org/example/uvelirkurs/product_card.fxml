<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.uvelirkurs.controllers.ProductCardController"
      spacing="10"
      prefWidth="220"
      style="
        -fx-background-color: white;
        -fx-padding: 12;
        -fx-background-radius: 12;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 8, 0, 0, 4);
      ">

    <!-- Изображение продукта -->
    <ImageView fx:id="imageView"
               fitWidth="196"
               fitHeight="120"
               preserveRatio="true"
               smooth="true"
               style="-fx-background-radius:10; -fx-border-radius:10; -fx-border-color:#ddd; -fx-border-width:1;" />

    <Label fx:id="nameLabel"
           wrapText="true"
           style="-fx-font-weight:bold; -fx-font-size:14; -fx-text-fill:#111;" />

    <Label fx:id="materialLabel"
           style="-fx-text-fill:#555; -fx-font-size:12;" />

    <Label fx:id="priceLabel"
           style="-fx-font-size:16; -fx-font-weight:bold; -fx-text-fill:#1e3a8a;" />

    <HBox spacing="8">
        <Button text="Подробнее"
                style="-fx-background-color:transparent; -fx-border-color:#1e3a8a; -fx-text-fill:#1e3a8a; -fx-border-radius:8; -fx-background-radius:8;"
                onAction="#onDetails"
                maxWidth="Infinity" />
        <Button text="Купить"
                style="-fx-background-color:#1e3a8a; -fx-text-fill:white; -fx-background-radius:8;"
                maxWidth="Infinity" />
    </HBox>

</VBox>
