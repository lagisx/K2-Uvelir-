<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.uvelirkurs.controllers.MainController">

    <BorderPane fx:id="mainBorderPane">

        <!-- Header -->
        <top>
            <HBox spacing="20" style="-fx-padding:20; -fx-background-color:#1e3a8a;">
                <Label text="Uvelir Shop" style="-fx-text-fill:white; -fx-font-size:18; -fx-font-weight:bold"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField promptText="Поиск..." />
                <Button text="Профиль"/>
                <Button text="Категории"/>
            </HBox>
        </top>

        <!-- Main content -->
        <center>
            <ScrollPane fitToWidth="true">
                <FlowPane fx:id="productsPane" hgap="15" vgap="15" style="-fx-padding:20"/>
            </ScrollPane>
        </center>

    </BorderPane>
</StackPane>

