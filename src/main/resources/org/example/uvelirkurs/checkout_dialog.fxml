<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.uvelirkurs.controllers.CheckoutDialogController"
            styleClass="main-background"
            stylesheets="@styles.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
            <Button text="← Назад"
                    onAction="#goBack"
                    styleClass="button-secondary"/>
            <Label text="Оформление заказа" styleClass="label-title"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 30;">

                <VBox spacing="25" maxWidth="600" styleClass="card">

                    <Label text="Данные доставки" styleClass="label-title"/>

                    <GridPane hgap="15" vgap="18">

                        <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Город *" styleClass="label-subtitle"/>
                            <TextField fx:id="shippingCityField"
                                       promptText="Москва"
                                       styleClass="text-field"
                                       prefWidth="270"/>
                        </VBox>

                        <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Телефон *" styleClass="label-subtitle"/>
                            <TextField fx:id="shippingPhoneField"
                                       promptText="+7 (___) ___-__-__"
                                       styleClass="text-field"
                                       prefWidth="270"/>
                        </VBox>

                        <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                            <Label text="Адрес доставки *" styleClass="label-subtitle"/>
                            <TextField fx:id="shippingAddressField"
                                       promptText="Улица, дом, квартира"
                                       styleClass="text-field"
                                       prefWidth="555"/>
                        </VBox>

                        <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                            <Label text="Способ оплаты" styleClass="label-subtitle"/>
                            <ComboBox fx:id="paymentMethodCombo"
                                      maxWidth="Infinity"
                                      styleClass="text-field"
                                      prefWidth="555"/>
                        </VBox>

                        <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
                            <Label text="Примечания к заказу" styleClass="label-subtitle"/>
                            <TextArea fx:id="notesArea"
                                      promptText="Дополнительная информация"
                                      wrapText="true"
                                      prefRowCount="3"
                                      styleClass="text-field"
                                      prefWidth="555"/>
                        </VBox>

                    </GridPane>

                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">

            <VBox spacing="15" style="-fx-padding: 25;">

                <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 18; -fx-background-radius: 10;">
                    <Label text="Итого к оплате:" styleClass="label-subtitle"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalAmountLabel"
                           text="0.00 ₽"
                           styleClass="total-price"/>
                </HBox>

                <HBox spacing="12" alignment="CENTER">
                    <Button text="Отмена"
                            onAction="#goBack"
                            styleClass="button-secondary"
                            maxWidth="Infinity"
                            HBox.hgrow="ALWAYS"
                            prefWidth="200"/>
                    <Button text="Оформить заказ"
                            onAction="#confirmOrder"
                            styleClass="button-primary"
                            maxWidth="Infinity"
                            HBox.hgrow="ALWAYS"
                            prefWidth="250"
                            defaultButton="true"/>
                </HBox>

                <Label text="* Обязательные поля для заполнения" styleClass="label-small"/>

            </VBox>
        </VBox>
    </bottom>

</BorderPane>
