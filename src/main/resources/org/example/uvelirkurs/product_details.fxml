<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.uvelirkurs.controllers.ProductDetailsController"
           style="-fx-background-color: rgba(0,0,0,0.4);"
           prefWidth="600" prefHeight="600">

    <VBox spacing="15"
          style="
            -fx-background-color:white;
            -fx-padding:20;
            -fx-background-radius:12;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10,0,0,4);
          "
          prefWidth="400"
          prefHeight="500">

        <Label fx:id="nameLabel" style="-fx-font-size:18; -fx-font-weight:bold"/>
        <Label fx:id="materialLabel"/>
        <Label fx:id="priceLabel" style="-fx-font-size:16; -fx-font-weight:bold"/>
        <Label fx:id="descriptionLabel" wrapText="true"/>

        <Region prefHeight="20"/>
        <HBox spacing="10">
            <Button text="Купить" style="-fx-background-color:#1e3a8a; -fx-text-fill:white"/>
            <Button text="Закрыть" onAction="#close"/>
        </HBox>

    </VBox>

</StackPane>
