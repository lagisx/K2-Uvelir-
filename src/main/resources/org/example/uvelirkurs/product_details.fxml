<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.uvelirkurs.controllers.ProductDetailsController"
           style="-fx-background-color: rgba(0,0,0,0.4);"
           prefWidth="800" prefHeight="600">

    <HBox spacing="30"
          style="
            -fx-background-color:white;
            -fx-padding:20;
            -fx-background-radius:12;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10,0,0,4);
          "
          prefWidth="750"
          prefHeight="550">

        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="prevButton" text="⟨" onAction="#prevImage" style="-fx-font-size:24;"/>
                <StackPane fx:id="imageContainer" style="-fx-pref-width:350; -fx-pref-height:350;"/>
                <Button fx:id="nextButton" text="⟩" onAction="#nextImage" style="-fx-font-size:24;"/>
            </HBox>
        </VBox>

        <VBox spacing="15" alignment="TOP_LEFT" style="-fx-pref-width:350;">
            <Label fx:id="nameLabel" style="-fx-font-size:22; -fx-font-weight:bold;"/>
            <Label fx:id="materialLabel" style="-fx-text-fill:#555; -fx-font-size:14;"/>
            <Label fx:id="priceLabel" style="-fx-font-size:20; -fx-font-weight:bold; -fx-text-fill:#1e3a8a;"/>
            <Label fx:id="descriptionLabel" wrapText="true" style="-fx-font-size:14; -fx-text-fill:#333;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <HBox spacing="10">
                <Button text="Купить" style="-fx-background-color:#1e3a8a; -fx-text-fill:white; -fx-background-radius:8;" prefWidth="120"/>
                <Button text="Закрыть" onAction="#close" style="-fx-background-color:transparent; -fx-border-color:#1e3a8a; -fx-text-fill:#1e3a8a; -fx-border-radius:8;"/>
            </HBox>
        </VBox>

    </HBox>

</StackPane>
