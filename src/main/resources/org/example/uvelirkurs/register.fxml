<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.uvelirkurs.controllers.RegisterController"
           stylesheets="@styles.css"
           style="-fx-background-color: linear-gradient(to bottom right, #4a5fd8, #764ba2);">

    <VBox alignment="CENTER" spacing="20" maxWidth="420" maxHeight="700" styleClass="card">

        <VBox alignment="CENTER" spacing="8">
            <Label text="✨" style="-fx-font-size: 42px;"/>
            <Label text="Создать аккаунт" styleClass="label-title"/>
            <Label text="Присоединяйтесь к нам" styleClass="label-subtitle"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Email *" styleClass="label-subtitle"/>
            <TextField fx:id="emailField" 
                       promptText="example@email.com"
                       styleClass="text-field"
                       prefWidth="320"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Полное имя *" styleClass="label-subtitle"/>
            <TextField fx:id="fullnameField" 
                       promptText="Иван Иванов"
                       styleClass="text-field"
                       prefWidth="320"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Телефон" styleClass="label-subtitle"/>
            <TextField fx:id="phoneField" 
                       promptText="+7 (___) ___-__-__"
                       styleClass="text-field"
                       prefWidth="320"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Пароль *" styleClass="label-subtitle"/>
            <PasswordField fx:id="passwordField" 
                          promptText="Минимум 6 символов"
                          styleClass="text-field"
                          prefWidth="320"/>
        </VBox>

        <Label fx:id="errorLabel"
               visible="false"
               wrapText="true"
               maxWidth="320"
               styleClass="error-text"/>

        <Button text="Зарегистрироваться" 
                onAction="#handleRegister"
                styleClass="button-primary"
                maxWidth="Infinity"
                prefWidth="320"/>

        <HBox alignment="CENTER" spacing="10" maxWidth="320">
            <Separator HBox.hgrow="ALWAYS" styleClass="separator-line"/>
            <Label text="или" styleClass="label-small"/>
            <Separator HBox.hgrow="ALWAYS" styleClass="separator-line"/>
        </HBox>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Уже есть аккаунт?" styleClass="label-small"/>
            <Hyperlink text="Войти" 
                      onAction="#goToLogin"
                      style="-fx-text-fill: #4a5fd8;"/>
        </HBox>

    </VBox>

</StackPane>
