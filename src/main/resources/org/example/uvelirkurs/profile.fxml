<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox xmlns:fx="http://javafx.com/javafx"
      fx:controller="org.example.uvelirkurs.controllers.ProfileController"
      spacing="15"
      style="-fx-background-color:white; -fx-padding:25; -fx-background-radius:12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10,0,0,4);"
      prefWidth="400">

    <Label text="Профиль пользователя" style="-fx-font-size:20; -fx-font-weight:bold;"/>

    <VBox spacing="10">
        <Label text="Логин (username)" style="-fx-font-size:14; -fx-font-weight:bold;"/>
        <TextField fx:id="usernameField" promptText="Введите логин"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Имя" style="-fx-font-size:14; -fx-font-weight:bold;"/>
        <TextField fx:id="nameField" promptText="Введите имя"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Email" style="-fx-font-size:14; -fx-font-weight:bold;"/>
        <TextField fx:id="emailField" promptText="Введите email"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Телефон" style="-fx-font-size:14; -fx-font-weight:bold;"/>
        <TextField fx:id="phoneField" promptText="Введите телефон"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Новый пароль" style="-fx-font-size:14; -fx-font-weight:bold;"/>
        <PasswordField fx:id="passwordField" promptText="Введите новый пароль"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Текущий пароль (обязательно для сохранения)" style="-fx-font-size:14; -fx-font-weight:bold;"/>
        <PasswordField fx:id="currentPasswordField" promptText="Введите текущий пароль"/>
    </VBox>

    <HBox spacing="15">
        <Button text="Сохранить"
                style="-fx-background-color:#1e3a8a; -fx-text-fill:white; -fx-background-radius:8;"
                onAction="#saveProfile"/>
        <Button text="Отмена"
                style="-fx-background-color:transparent; -fx-border-color:#1e3a8a; -fx-text-fill:#1e3a8a; -fx-border-radius:8;"
                onAction="#cancel"/>
    </HBox>

    <Label fx:id="statusLabel" text="" style="-fx-font-size:12; -fx-font-weight:bold;"/>
</VBox>
